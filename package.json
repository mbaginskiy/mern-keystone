    "nyc": "^6.4.4",
    "postcss": "^6.0.12",
    "postcss-cssnext": "^3.0.2",
    "postcss-focus": "^2.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-reporter": "^5.0.0",
    "postcss-scss": "1.0.2",
